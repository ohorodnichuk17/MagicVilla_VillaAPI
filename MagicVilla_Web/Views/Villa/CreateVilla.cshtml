@model MagicVilla_Web.Models.Dto.VillaCreateDTO

<form asp-action="CreateVilla">
    <br>
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr>
        
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Name" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Rate" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Details" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="ImageUrl" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Occupancy" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" class="form-control" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Sqft" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sqft" class="form-control" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>
            
            <div class="col-2">
                <label class="control-label pt-2" asp-for="Amenity" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenity" class="form-control"></textarea>
                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}